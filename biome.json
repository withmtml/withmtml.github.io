{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "include": [
      "./.vscode/*.json",
      "./.zed/*.json",
      "./src",
      "./public",
      "astro.config.js",
      "package.json",
      "biome.json",
      "tsconfig.json"
    ],
    "indentStyle": "tab"
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "indentStyle": "tab",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "include": ["*.astro"],
      "javascript": {
        "globals": ["Astro"]
      }
    }
  ]
}
